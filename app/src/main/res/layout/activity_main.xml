<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <LinearLayout
    android:id="@+id/layoutTest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    fab:layout_constraintBottom_toBottomOf="@+id/my_recycler_view"
    fab:layout_constraintLeft_toLeftOf="parent"
    fab:layout_constraintStart_toStartOf="parent">


    <ImageView
        android:id="@+id/imageTransition"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:src="@android:mipmap/sym_def_app_icon"
        android:transitionName="transitionImage" />

    <TextView
        android:id="@+id/textTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST TRANSITION"
        android:transitionName="transitionText" />


</LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        fab:layout_constraintBottom_toBottomOf="@+id/my_recycler_view"
        fab:layout_constraintRight_toRightOf="parent"
        fab:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/imageTransition2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:src="@android:mipmap/sym_def_app_icon"
            android:transitionName="transitionImage" />

        <TextView
            android:id="@+id/textTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST TRANSITION"
            android:transitionName="transitionText" />


    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/default_margin"
        android:visibility="gone"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintRight_toRightOf="parent"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="@color/colorPrimary"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_icon="@drawable/ic_light_bulb">


        <!--<com.github.clans.fab.FloatingActionButton-->
            <!--android:id="@+id/menu_on"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/ic_menu_on"-->
            <!--fab:fab_colorNormal="@android:color/transparent"-->
            <!--fab:fab_colorPressed="@color/colorPrimary"-->
            <!--fab:fab_label="@string/light_on" />-->

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_menu_off"
            fab:fab_colorNormal="@android:color/transparent"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_label="@string/light_off" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_menu_palette"
            fab:fab_colorNormal="@android:color/transparent"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_label="@string/pick_color" />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>